# Proxy through the main site to the backend Node.js process.
server {
    server_name javascript-minifier.com;
    listen 80;

    access_log /var/log/nginx/javascript-minifier-com.access.log;
    error_log  /var/log/nginx/javascript-minifier-com.error.log;

    location / {
        proxy_pass  http://127.0.0.1:8021/;
    }
}

# Redirect the www (and typos) versions to the naked domain.
server {
    server_name www.javascript-minifier.com ww.javascript-minifier.com w.javascript-minifier.com;
    listen 80;

    rewrite ^ http://javascript-minifier.com$uri permanent;
}
