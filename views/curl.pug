extends layout

block content
  h3.muted Curl
  pre.
    # minifying some JavaScript
    curl -X POST -s --data-urlencode 'input=console.log( 1 );' #{env.baseUrl}/raw

    # minifying a JS file (e.g. ready.js -> ready.min.js)
    curl -X POST -s --data-urlencode 'input@ready.js' #{env.baseUrl}/raw > ready.min.js

  include ./include/languages.pug
